{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-std=c++23",
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
            "detail": "compiler: /opt/homebrew/bin/g++-15"
        },
        {
            "label": "Run and Delete active file",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "\"clear && ${fileDirname}/${fileBasenameNoExtension} && rm -f ${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run active file",
            "dependsOrder": "sequence",
            "dependsOn": [
                "C/C++: g++ build active file",
                "Run and Delete active file"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
